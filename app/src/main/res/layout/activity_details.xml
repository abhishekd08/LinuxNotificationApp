<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailsactivity_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details.DetailsActivity">

    <TextView
        android:id="@+id/detailsactivity_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="10"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title" />

    <View
        android:id="@+id/detailsactivity_separator_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#464646"
        app:layout_constraintTop_toBottomOf="@id/detailsactivity_title_textview" />

    <TextView
        android:id="@+id/detailsactivity_datetime_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailsactivity_separator_view"
        tools:text="2019-1-21 14:04:23" />

    <TextView
        android:id="@+id/detailsactivity_body_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="8dp"
        android:scrollbars="vertical"
        android:text="dfsgdfsgsdfg sdfg sdfg sd fg dsfg sdfg sdf gsd fgs dfg sdfgsdfg sdf g dsfg sdf g dsfg sdf gsdf gd
        f dfgsdfgsdf gsdfgsd fgdsfg sdfgdsfg sdfgsdf gsdfg sdfgsd fgsdfdfgsdfg
        sdfgdsf gsdfg sdfg sdfg sdf gsdf gg"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailsactivity_datetime_textview" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="onDeleteFabClicked"
        android:src="@drawable/vector_delete_black_24dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>